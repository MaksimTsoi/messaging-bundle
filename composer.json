{
    "name": "tsoi/event-bus-bundle",
    "type": "symfony-bundle",
    "description": "MaksimTsoi/EventBusBundle",
    "keywords": [
        "Symfony",
        "Bundle",
        "Tsoi",
        "Microservice",
        "Event Bus",
        "Message Bus"
    ],
    "homepage": "https://github.com/MaksimTsoi/EventBusBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Maksim Tsoi",
            "email": "maksimtsoi.nsk@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "php-amqplib/php-amqplib": "^2.7",
        "ramsey/uuid": "^3.7",
        "symfony/dependency-injection": "^4.0",
        "symfony/console": "^4.0",
        "symfony/process": "^4.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Tsoi\\EventBusBundle\\": ""
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/simple-phpunit",
        "test-ci": "vendor/bin/simple-phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
